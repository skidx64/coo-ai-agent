# AWS Deployment Environment Variables
# Copy these to Lambda function environment variables in AWS Console

# Environment Settings
ENVIRONMENT=aws
AI_PROVIDER=bedrock
RAG_PROVIDER=chromadb

# AWS Configuration
AWS_REGION=us-east-1

# Bedrock Model IDs
# Haiku (cheapest for testing): anthropic.claude-3-5-haiku-20241022-v1:0
# Sonnet (better quality): anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0

# Nova Lite for smart classification (6x cheaper than Haiku!)
BEDROCK_CLASSIFIER_MODEL=amazon.nova-lite-v1:0
USE_LLM_CLASSIFICATION=true

# Optional: Bedrock Nova Pro (if you want to test it)
BEDROCK_NOVA_MODEL_ID=amazon.nova-pro-v1:0

# Optional: Bedrock Knowledge Base (skip for budget testing)
BEDROCK_KB_ID=

# Database (SQLite for testing on Lambda)
DATABASE_URL=sqlite:///./tmp/coo.db

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=+1234567890

# JWT Settings (optional - for auth)
JWT_SECRET_KEY=your-random-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Debug Mode (set to false in production)
DEBUG=false
